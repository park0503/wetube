extends layouts/main.pug

block content
    .form-container
        form(action=`/users${routes.changePassword}`, method='post')
            input(type='text', name='currentPassword', placeholder='Current Password')
            input(type='text', placeholder='New Password', name='newPassword')
            input(type='text', placeholder='Verify New Password', name='verifyNewPassword')
            input(type='submit', value='Change Password')
        